<p>
  <strong>Type:</strong>
  <%= @assignment.assignment_type %>
</p>
 
<p>
  <strong>Due Date:</strong>
  <%= @assignment.due_date %>
</p>
 

 <h2>Add a comment:</h2>
<%= form_for([@assignment, @assignment.comments.build]) do |f| %>
  <p>
    <%= f.label :questions %><br>
    <%= f.text_field :questions %>
  </p>
  <p>
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'All Assignments', course_path(@course) %>






